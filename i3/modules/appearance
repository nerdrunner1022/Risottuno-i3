# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:ShureTechMono Nerd Font 12

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

for_window[class="^.*"] border pixel 3

gaps inner 10
gaps outer 3

focus_follows_mouse yes

# window colors
# format: border <focused> <inactive> <urgent> <placeholder>
client.focused          #ffffff #ffffff #000000 #000000
client.unfocused        #ffffff #000000 #000000 #000000
client.urgent           #ff0000 #000000 #ffffff #000000
client.placeholder      #000000 #000000 #000000 #000000

